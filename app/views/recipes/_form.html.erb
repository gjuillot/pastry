<%= form_for(@recipe, html: { class:'form-horizontal'}) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label "Nom", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Quantité", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :quantity %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Unité", :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :unit, Recipe::UNITS, :to_s, :to_s %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Catégorie", :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :category, Recipe::CATEGORIES, :to_s, :to_s %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <br />
      <%= f.submit "Créer cette recette" %>
    </div>
  </div>
<% end %>
