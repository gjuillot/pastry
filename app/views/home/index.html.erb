    { name: "gateaux_decores", title: "Gâteaux décorés et 3D", text: "Gâteaux décorés et gâteaux 3D faits sur mesure pour surprendre vos invités.", img: "homepage/gateaux_decores.jpg" },
    { name: "pour_vos_evenements", title: "Pour vos évènements", text: "Outre gâteaux décorés et gâteaux 3D, je suis à votre disposition pour animer vos évènements.", img: "http://68.media.tumblr.com/13b11cd3921b2f91506e2445b1d1ca06/tumblr_nvpcu1diSv1uadryro1_1280.jpg" },
    { name: "", title: "Pour les professionnels", text: "Restauration, évènementiel ou points de vente, contactez moi pour réaliser vos pâtisseries.", img: "http://68.media.tumblr.com/4e92b1699ba78558c017eb217047bb18/tumblr_nrmhggwPL81uadryro4_1280.jpg" }
  ]
  
  produits.each do |produit|
%>         
            <div class="dish col-sm-4 col-xs-12 onscreen-marker">
              <div class="media-container col-xs-12">
                <div class="inner">
                  <%= image_tag produit[:img], class: "img-responsive" %>
                  <% unless produit[:name].empty? %>
                    <%= link_to "", "/" + produit[:name], {class: "hover-overlay color", title: produit[:title]} %>
                    <a href="/<%= produit[:name] %>" class="icon"><%= image_tag "icones/magnifying-glass_64px.png", class: "img-responsive" %></a>
                   <% end %>
                </div><!-- / inner -->
              </div><!-- media-container -->
              <div class="content col-xs-12">
                <% if produit[:name].empty? %>
                  <h3><%= produit[:title] %></h3>
                <% else %>
                  <a href="/<%= produit[:name] %>"><h3><%= produit[:title] %></h3></a>
                <% end %>
                <p><%= produit[:text] %></p>
              </div><!-- content -->
            </div><!-- / dish -->
<% end %>

          </div><!-- / row -->
        </div><!-- / tab-content -->
      </div><!-- container -->

    </div><!-- / ht-menu -->
</div><!-- / menu -->

