    <div id="ht-menu" class="grid">
      <div class="container">
        <div id="filter-container" class="menu-single-grid grid-3col">
          <div class="row">
            
<%
  produits = [
    { name: "macarons", title: "Macarons", text: "Régalez vos papilles avec mes macarons entièrement faits maison.", img: "https://40.media.tumblr.com/43be6745e2da3876ea7c136cf7fda097/tumblr_nrqfnuz9fU1uadryro1_1280.jpg" },
    { name: "macarons_geants", title: "Macarons géants", text: "Toute la gourmandise et la qualité de mes macarons, en version à partager.", img: "http://68.media.tumblr.com/4cb0a2ec477ad6933684ec6609e63f60/tumblr_nrm3sk2XJA1uadryro5_r1_1280.jpg" },
    { name: "tartes", title: "Tartes", text: "Des créations modernes pour réinventer ce classique de nos grand-mères.", img: "https://40.media.tumblr.com/180e76046f3b0961ccf70467ba5fab87/tumblr_nrmhggwPL81uadryro1_1280.jpg" },
    { name: "entremets", title: "Entremets", text: "Grands classiques ou créations maison, découvrez mes desserts à base de mousses.", img: "https://40.media.tumblr.com/ccb18e8ddd416609343a81ff0751ce86/tumblr_nrkyp7ve2j1uadryro1_1280.jpg" },
    { name: "patisseries_americaines", title: "Pâtisseries américaines", text: "Laissez-vous tenter par mes cheesecakes ou autres pâtisseries d'inspiration américaine.", img: "http://40.media.tumblr.com/03ef2fd18b6914cf7ecc03e788ee1cd2/tumblr_nrmp6c3cYL1uadryro3_r1_540.jpg" },
