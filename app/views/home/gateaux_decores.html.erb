<%
  photos = [
    { name: "baby_shower", theme: "adulte" },
    { name: "decore_mouton", theme: "enfant" },
    { name: "decore_neige", theme: "enfant" },
    { name: "mario", theme: "enfant" },
    { name: "minnie", theme: "enfant" },
