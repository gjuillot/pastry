<% photos.each do |photo| %>            
            <div class="frame <%= photo[:theme] %> col-md-3 col-sm-4 onscreen-marker">
              <div class="media-container">
                <div class="inner">
                  <%= image_tag "gateaux_decores/" + photo[:name] + ".jpg" ,  class: "img-responsive" %>
                  <div class="hover-overlay color"></div><!-- / hover-overlay -->
                  <a data-lightbox-gallery="gallery1" href="<%= image_path "gateaux_decores/" + photo[:name] + ".jpg" %>" class="nivo-lightbox icon" title="">
