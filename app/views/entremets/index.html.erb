
  <div id="ht-main-content" class="menu">

    <div class="ht-page-heading">
      <div class="container">
        <div class="row">
          <div class="main-heading col-xs-12">
            <h1><strong>&middot;</strong> Nos entremets <strong>&middot;</strong></h1>
          </div><!-- / main-heading -->
        </div><!-- / row -->
      </div><!-- / container -->
    </div><!-- / page-heading -->
    
    <div id="ht-menu" class="grid">
      <div class="container">
        <div id="filter-container" class="menu-single-grid grid-2col">
          <div class="row">
            
<% @produits.each do |produit| %>

            <div class="dish drink col-sm-6 col-xs-12 onscreen-marker">
              <div class="media-container col-xs-12">
                <div class="inner">
                    <%= image_tag produit[:images][0], class: "img-responsive" %>
                    <a href="<%= produit[:url] %>" class="icon">
                      <%= image_tag produit[:zoom], class: "img-responsive" %>
                    </a>
                </div><!-- / inner -->

              </div><!-- media-container -->
              <div class="content col-xs-12">
                <a href="<%= produit[:url] %>"><h3><%= raw produit[:name] %></h3></a>
                <p><%= raw produit[:text] %></p>
              </div><!-- content -->
            </div><!-- / dish -->

<% end %>

<% unless @also.empty? %>

            <div class="dish drink col-sm-6 col-xs-12 onscreen-marker">
              <div class="content col-xs-12">
                <br /><br /><br />
                <h2>Découvrez également</h2>
                <br /><br />

  <% @also.each do |produit| %>
                <h3><%= raw produit[:name] %></h3>
                <p><%= raw produit[:text] %></p><br />
  <% end %>
              </div><!-- content -->
            </div><!-- / dish -->
<% end %>


          </div><!-- / row -->
        </div><!-- / filter-container menu-single-grid -->
      </div><!-- container -->
    </div><!-- / ht-menu -->